{
  "defaultBase": "main",
  "affected": {
    "defaultBase": "develop"
  },
  "implicitDependencies": {
    "nx.json": "*"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": ["lint", "build", "test", "test:contracts", "prettier", "solhint", "codegen"]
      }
    }
  },
  "targetDefaults": {
    "dev": {
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/out",
        "{projectRoot}/abi",
        "{projectRoot}/types",
        "{projectRoot}/.parcel-cache"
      ]
    },
    "release": {
      "dependsOn": ["^build", "build", "^release"]
    },
    "test": {
      "dependsOn": ["^build", "build"]
    },
    "test:contracts": {
      "dependsOn": ["^build", "build"]
    },
    "test:forge": {
      "dependsOn": ["^build", "build"]
    },
    "test:hardhat": {
      "dependsOn": ["^build", "build"]
    },
    "test:solidity": {
      "dependsOn": ["^build", "build"]
    },
    "test:typescript": {
      "dependsOn": ["^build", "build"]
    },
    "gas-report": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/gas-report.json"]
    },
    "codegen": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/src", "{projectRoot}/test"]
    }
  }
}
